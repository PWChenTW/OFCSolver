# Set default behavior to automatically normalize line endings
* text=auto

# Force LF line endings for Python files
*.py text eol=lf
*.pyi text eol=lf

# Force LF for shell scripts
*.sh text eol=lf

# Force LF for YAML files
*.yml text eol=lf
*.yaml text eol=lf

# Force LF for requirements files
requirements*.txt text eol=lf

# Force LF for config files
.gitignore text eol=lf
.gitattributes text eol=lf
*.toml text eol=lf
*.ini text eol=lf
*.cfg text eol=lf

# Force LF for documentation
*.md text eol=lf
*.rst text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary